<div class="text-center">
  <h1>Dish <%= @dish.name %> dish</h1>
  <% if @dish.photo? %>
    <%= cl_image_tag @dish.photo.path, width: 300, height: 200, crop: :fill %>
  <% end %>
  <p>Description: <%= @dish.description %></p>
  <p>Category: <%= @dish.category %></p>
  <p>Price: <%= @dish.price %></p>
  <p>Gluten? <%= @dish.gluten %></p>
  <p>Bio? <%= @dish.bio %></p>
  <p>Végétarien? <%= @dish.vegetarien %></p>
  <p><%= link_to "Editer", edit_foodtruck_dish_path, class: "btn btn-primary" %></p>
  <h5><%= link_to "Retour", foodtruck_dishes_path, class: "btn btn-primary" %></h5>
</div>
