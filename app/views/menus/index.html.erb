

<div class="container">
  <div class="row">
    <h1 class="text-center">index menu</h1>
    <h2 class="text-center"><%= link_to "New Menu", new_foodtruck_menu_path(@foodtruck), class: "btn btn-primary" %></h2>


      <div class="text-center">
        <% @menus.each do |menu| %>
          <div class="text-center">
            <h2>nom: <%= menu.name %></h2>
            <h3>description: <%= menu.description %></h3>
            <h5><%= link_to "Voir PLUS", foodtruck_menu_path(@foodtruck, menu), class: "btn btn-primary" %></h5>
          </div>
        <% end %>
      <h5><%= link_to "Retour", foodtruck_path(@foodtruck), class: "btn btn-primary" %></h5>
    </div>
  </div>
</div>
